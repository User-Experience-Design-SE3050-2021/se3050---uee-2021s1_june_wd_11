<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/idIvOrder"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/idTVname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recepien tName"
            android:textColor="@color/black"
            android:fontFamily="@font/cabold"
            android:layout_toLeftOf="@id/idTVweight"
            android:singleLine="true"
            android:layout_below="@+id/idIvOrder"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15dp"/>
            >

        <TextView
            android:id="@+id/idTVweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weight"
            android:singleLine="true"
            android:textColor="@color/black"
            android:fontFamily="@font/careguler"
            android:layout_below="@+id/idIvOrder"
            android:layout_margin="3dp"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:textSize="15dp"/>
        >




    </RelativeLayout>

</androidx.cardview.widget.CardView>