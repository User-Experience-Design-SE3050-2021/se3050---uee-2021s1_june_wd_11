<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/IdRlbottomsheeet">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cakeflovour"

        android:textColor="@color/pink"
        android:fontFamily="@font/cabold"
        android:id="@+id/idtvflavour"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="15dp"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idtvflavour"
        android:layout_margin="4dp"
        android:src="@drawable/profile"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/idIvOrder"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Requirements"
        android:textColor="@color/pink"
        android:fontFamily="@font/cabold"
        android:layout_toRightOf="@id/idIvOrder"
        android:id="@+id/idtvRequire"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:textSize="15dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@color/pink"
        android:fontFamily="@font/cabold"
        android:layout_toRightOf="@id/idIvOrder"
        android:layout_below="@id/idtvRequire"
        android:id="@+id/idtvadress"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/idTVdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date"
        android:textColor="@color/pink"
        android:fontFamily="@font/cabold"
        android:layout_toRightOf="@id/idIvOrder"
        android:layout_below="@id/idtvadress"

        android:layout_margin="4dp"
        android:padding="3dp"
        android:textSize="15dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/idTVdate"
        >

        <Button
            android:id="@+id/idBtnEdit"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/black" />


    </LinearLayout>






</RelativeLayout>